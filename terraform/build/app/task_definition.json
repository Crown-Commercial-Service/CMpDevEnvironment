[
  {
    "name": "${app_name}",
    "image": "${image}",
    "cpu": 10,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 0
      }
    ],
    "environment": [
      {
        "name": "CCS_APP_BASE_URL",
        "value": "${app_base_url}"
      },
      {
        "name": "CCS_APP_PROTOCOL",
        "value": "${app_protocol}"
      }, 
      {
        "name": "CCS_FEATURE_EG1",
        "value": "on"
      } 
    ]
  }
]  