[
  {
    "name": "${api_name}",
    "image": "${image}",
    "cpu": 10,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 0
      }
    ],
    "environment": [
      {
        "name": "CCS_API_BASE_URL",
        "value": "${api_base_url}"
      },
      {
        "name": "CCS_API_PROTOCOL",
        "value": "${api_protocol}"
      }, 
      {
        "name": "CCS_FEATURE_EG1",
        "value": "on"
      } 
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
          "awslogs-group": "${api_log_group}",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "${api_name}"
      }
    }
  }
]  